---
import SectionBlock from '../components/Base/SectionBlock.astro';
import FAQ from '../components/Sections/FAQ.astro';
import Layout from '../layouts/Layout.astro';

// Sample FAQ items
const mockFAQData = {
  header: "FAQ Test",
  subHeader: "Testing dark mode background color",
  faqItems: [
    { 
      question: "Test Question 1", 
      answer: "This is a test answer for question 1." 
    },
    { 
      question: "Test Question 2", 
      answer: "This is a test answer for question 2." 
    }
  ]
};
---

<Layout title="FAQ Test">
  <main class="container mx-auto p-4">
    <h1 class="text-h1 mb-8">FAQ Test Page</h1>
    
    <!-- Standard FAQ Component -->
    <FAQ blok={mockFAQData} />
    
    <!-- Direct SectionBlock with custom colors -->
    <SectionBlock 
      header="Custom Color Test" 
      subHeader="Testing direct background color application" 
      sectionType="faq">
      <p class="p-4">This should have a blue background in light mode and yellow in dark mode.</p>
    </SectionBlock>
    
    <!-- Color Override Test -->
    <SectionBlock 
      header="Override Test" 
      backgroundColorClass="bg-blue-500 dark:bg-yellow-500">
      <p class="p-4 text-white dark:text-black">This directly uses bg-blue-500 and dark:bg-yellow-500 classes.</p>
    </SectionBlock>
    
    <div class="fixed bottom-4 right-4 bg-white dark:bg-gray-800 p-4 rounded-lg shadow-lg">
      <button id="theme-toggle" class="px-4 py-2 bg-gray-200 dark:bg-gray-600 rounded">
        Toggle Dark Mode
      </button>
    </div>
  </main>
</Layout>

<script>
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    if (document.documentElement.classList.contains('dark')) {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      document.documentElement.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  });
</script>
