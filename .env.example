# Hotel Stern Environment Configuration

# Storyblok API token for content management
STORYBLOK_TOKEN=your_storyblok_token_here

# Property identifier for Storyblok
PROPERTY=szs

# Payment processing API keys
SUMUP_API_KEY=your_sumup_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PUBLIC_STRIPE_KEY=your_public_stripe_key_here

# Apaleo hotel management system credentials
APALEO_PROPERTY_ID=SZS
APALEO_CLIENT_ID=your_apaleo_client_id_here
APALEO_CLIENT_SECRET=your_apaleo_client_secret_here
APALEO_TOKEN_ENDPOINT=https://identity.apaleo.com/connect/token
APALEO_API_URL=https://api.apaleo.com

# Email service API key
RESEND_API_KEY=your_resend_api_key_here

# OpenAI API key for AI features
OPEN_AI_SECRET_KEY=your_openai_api_key_here

# Payment and webhook configuration
SHOW_EXTENDED_PAYMENT_OPTIONS=false
USE_TEST_WEBHOOK=false
WEBHOOK_URL_PRODUCTION=your_production_webhook_url_here
WEBHOOK_URL_TEST=your_test_webhook_url_here

